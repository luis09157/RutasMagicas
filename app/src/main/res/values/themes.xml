<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RutasMagicas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Puedes eliminar la siguiente secciÃ³n si ya no la necesitas -->
    <style name="Theme.RutasMagicas.NoActionBar" parent="Theme.RutasMagicas">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RutasMagicas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.RutasMagicas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
