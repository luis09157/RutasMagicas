<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#7d1010"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Material Card View for the profile picture -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="48dp">

        <!-- ImageView for the profile picture -->
        <ImageView
            android:id="@+id/imagen_perfil_nav_header"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
    android:id="@+id/txt_nombre_usuario_nav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/nav_header_vertical_spacing"
    android:text="@string/nav_header_title"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textSize="16sp"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
    android:id="@+id/txt_correo_nav"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textSize="13sp"
    android:text="@string/nav_header_subtitle" />
</LinearLayout>
