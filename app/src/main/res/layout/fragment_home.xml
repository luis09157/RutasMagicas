<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/portada">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#02608c"
                android:textSize="22dp"
                android:fontFamily="@font/suse_extra_bold"
                android:gravity="center"
                android:text="Hola Luis,\n tienes un 40 % completado"/>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center|bottom"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#ff6800">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:fontFamily="@font/suse_bold"
                        android:gravity="center"
                        android:text="Rutas Magicas"/>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <GridView
            android:id="@+id/lista_estados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:numColumns="2"></GridView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>