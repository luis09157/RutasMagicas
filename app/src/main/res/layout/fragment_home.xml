<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/portada_2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#02608c"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="27sp"
                app:autoSizeMinTextSize="21sp"
                app:autoSizeStepGranularity="2sp"
                android:fontFamily="@font/suse_extra_bold"
                android:gravity="center"
                android:text="Hola Luis,\n tienes un 40 % completado"/>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:progress="30"
            android:indeterminate="false"/>

        <GridView
            android:id="@+id/lista_estados"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:numColumns="2"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
