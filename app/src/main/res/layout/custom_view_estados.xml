<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        style="@style/Widget.Material3.CardView.Filled"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4">
                <ImageView
                    android:id="@+id/imagen_estado"
                    android:src="@drawable/estado_nuevo_leon"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="-5dp"
                    android:backgroundTint="@color/black"
                    android:alpha="0.7">
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:translationZ="10dp"
                    android:layout_gravity="top|left"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo_pueblo_magico"></ImageView>
                    <TextView
                        android:id="@+id/txt_numero_pueblos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2 Pueblos"
                        android:layout_marginLeft="-4dp"
                        android:gravity="center"
                        android:translationZ="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/suse_extra_bold"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zacatecas"
                    android:textColor="@color/black"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="10sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/suse_bold"/>
                <TextView
                    android:id="@+id/txt_descripcion"
                    android:fontFamily="@font/suse_regular"
                    android:textColor="@color/txt_secundario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"

                    android:layout_marginRight="10dp"
                    app:autoSizeMaxTextSize="10sp"
                    app:autoSizeMinTextSize="9sp"
                    android:text="Visitaste 2 pueblos mÃ¡gicos."
                    android:lines="1"/>
            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>